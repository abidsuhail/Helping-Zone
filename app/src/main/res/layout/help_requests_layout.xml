<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="2dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/help_requests_layout_dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="5dp"
            android:src="@drawable/ic_user_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/help_requests_layout_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/help_requests_layout_dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Abid Suhail" />

        <TextView
            android:id="@+id/help_requests_layout_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/help_requests_layout_username"
            app:layout_constraintStart_toEndOf="@+id/help_requests_layout_dp"
            app:layout_constraintTop_toBottomOf="@+id/help_requests_layout_username"
            tools:text="xyz meter/km away" />

        <TextView
            android:id="@+id/help_requests_layout_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="@+id/help_requests_layout_username"
            app:layout_constraintStart_toEndOf="@+id/help_requests_layout_dp"
            app:layout_constraintTop_toBottomOf="@+id/help_requests_layout_distance"
            tools:text="date" />

        <TextView
            android:id="@+id/help_requests_layout_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="@+id/help_requests_layout_username"
            app:layout_constraintStart_toEndOf="@+id/help_requests_layout_dp"
            app:layout_constraintTop_toBottomOf="@+id/help_requests_layout_date"
            tools:text="time" />

        <ImageButton
            android:id="@+id/help_requests_layout_trigger_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/divider"
            android:padding="5dp"
            android:src="@drawable/ic_play"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/help_requests_layout_distance"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/help_requests_layout_dp"
            app:layout_constraintTop_toBottomOf="@+id/help_requests_layout_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
